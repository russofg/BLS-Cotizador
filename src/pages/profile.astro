  function updateAvatarDisplay() {
    const avatarImage = document.getElementById(
      "avatar-image"
    ) as HTMLImageElement;
    const avatarInitials = document.getElementById(
      "avatar-initials"
    ) as HTMLElement;
    const removeBtn = document.getElementById(
