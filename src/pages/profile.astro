  async function saveProfile() {
    if (!currentUser) return;

    const form = document.getElementById("profile-form") as HTMLFormElement;
    if (!form || !form.checkValidity()) {
      notifications.error(
        "Error",
        "Por favor completa todos los campos requeridos"
      );
      return;
    }

    const formData = new FormData(form);
    const nombre = formData.get("nombre") as string;
    const email = formData.get("email") as string;

    if (!nombre?.trim()) {
      notifications.error("Error", "El nombre es requerido");
      return;
    }

    if (!email?.trim()) {
      notifications.error("Error", "El email es requerido");
      return;
    }

    // Validar formato de email
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
      notifications.error("Error", "El formato del email no es v√°lido");
      return;
    }

    // Verificar si el email cambi√≥
    const emailChanged = email.trim() !== currentUser.email;

    // Si hay un email pendiente de verificaci√≥n, tambi√©n considerar si est√° cambiando ese
    const hasPendingEmail =
      currentUser.emailPendienteVerificacion &&
      currentUser.emailPendienteVerificacion !== currentUser.email;
    const isChangingPendingEmail =
      hasPendingEmail &&
      email.trim() !== currentUser.emailPendienteVerificacion;

    // Si el email cambi√≥, verificar que no est√© en uso
    if (emailChanged || isChangingPendingEmail) {
      try {
        notifications.loading(
          "Verificando",
          "Verificando disponibilidad del email..."
        );

        // Verificar si el email ya est√° en uso por otro usuario
        const { collection, query, where, getDocs } = await import(
          "firebase/firestore"
        );
        const emailQuery = query(
          collection(db, "usuarios"),
          where("email", "==", email.trim())
        );
        const emailSnapshot = await getDocs(emailQuery);

        // Si hay documentos y no es el usuario actual, el email est√° en uso
        if (!emailSnapshot.empty) {
          const emailInUse = emailSnapshot.docs.some(
            (doc) => doc.id !== currentUser.id
          );
          if (emailInUse) {
            notifications.error(
              "Error",
              "Este email ya est√° en uso por otro usuario"
            );
            return;
          }
        }
      } catch (error) {
        console.error("Error checking email availability:", error);
        notifications.error(
          "Error",
          "No se pudo verificar la disponibilidad del email"
        );
        return;
      }
    }

    try {
      notifications.loading("Guardando", "Actualizando perfil...");

      // Si el email cambi√≥, usar flujo de verificaci√≥n
      if (emailChanged || isChangingPendingEmail) {
        console.log("üìß Email changed, updating in Firestore first...");

        // Update user in Firestore with pending verification status
        await updateDoc(doc(db, "usuarios", currentUser.id), {
          nombre: nombre.trim(),
          email: email.trim(),
          emailVerificado: false,
          emailPendienteVerificacion: email.trim(),
          fechaModificacion: new Date(),
        });

        // Send email verification
        console.log("üìß Sending email verification...");
        const verificationResult = await authService.sendEmailVerification();

        if (!verificationResult.success) {
          console.error(
            "‚ùå Error sending email verification:",
            verificationResult.error
          );
          throw new Error(
            `Error al enviar verificaci√≥n: ${verificationResult.error?.message || "Error desconocido"}`
          );
        }

        console.log("‚úÖ Email verification sent successfully");

        // Show specific message for email change
        await notifications.success(
          "¬°Email actualizado!",
          "Se ha enviado un email de verificaci√≥n a tu nueva direcci√≥n. " +
            "Por favor, verifica tu email antes de poder iniciar sesi√≥n con la nueva direcci√≥n."
        );

        // Reload user info
        await loadUserProfile();
        return; // Exit early for email changes
      }

      // Update user in Firestore (for non-email changes)
      await updateDoc(doc(db, "usuarios", currentUser.id), {
        nombre: nombre.trim(),
        email: email.trim(),
        fechaModificacion: new Date(),
      });

      await notifications.success(
        "¬°Perfil actualizado!",
        "Los cambios se han guardado exitosamente"
      );

      // Reload user info
      await loadUserProfile();

      // Redirect to dashboard after successful save
      setTimeout(() => {
        window.location.href = "/dashboard";
      }, 1500);
    } catch (error) {
      console.error("Error saving profile:", error);
      notifications.error("Error", "No se pudo actualizar el perfil");
    }
  }

